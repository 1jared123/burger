<h1>Eat the burger!</h1>


<!-- Pass in data from server.js -->
<ul>
  {{#each burgers}}
    <li>
      <p><span class="label">Burger:</span> {{this.burger_name}}</p>
      <p><span class="label">Author:</span> {{this.date}}</p>

      <form action="/{{this.id}}?_method=DELETE" method="POST">
        <input type="hidden" name="id" value="{{this.id}}">
        <button type="submit"><span>Delete</span></button>
      </form>

      <a href="/{{this.id}}">Update this quote</a>
    </li>
  {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form" action="/" method="POST">

  <div class="form-group">
    <label for="auth">Type of Burger:</label>
    <input type="text" id="auth" name="author">
  </div>


  <button type="submit">Add Quote</button>
</form>
